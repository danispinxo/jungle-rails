<section class="orders-show">

  <header class="page-header">
    <h1>Order No. <%= @order.id %></h1>
    <h4><%= @order.email %> </h4>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order!</h4>
    <h5>Your order details:</h5>
    <table class="table table-bordered">
    <thead>
      <tr>
        <th>Product</th>
        <th>Name</th>
        <th>Description</th>
        <th>Unit Price</th>
        <th>Quantity</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
      <% @order.line_items.each do |item| %>

        <%= render 'line-item', product_id: item[:product_id], quantity: item[:quantity].to_i, item_price: item[:item_price_cents], total_price: item[:total_price_cents] %>

      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <th colspan="5">
          TOTAL:
        </th>
        <th>
          <%= humanized_money_with_symbol @order.total_cents / 100.00 %>
        </th>
      </tr>
    </tfoot>
  </table>
  </div>
  <p>Thank you for shopping at Jungle!</p>

  <%= link_to "Buy More Plants?", root_path, class: 'btn btn-lg btn-primary' %>

</section>